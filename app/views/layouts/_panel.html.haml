.panel.panel-default.form-container
  .panel-heading
    %h4
      =yield_content :header
  .panel-body
    -if content_for?(:body)
      =yield_content :body
    -else
      =yield
  .panel-footer
    %center
      -if content_for?(:footer)
        =yield_content :footer
      -else
        -# = f.button :submit, "Submit", class: "btn btn-primary", role: 'button'
        .btn.btn-primary.panel-form-submit Submit
        .btn.btn-danger.panel-form-cancel Cancel
