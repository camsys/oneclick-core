=content_for :title do
  ="New Custom Geography"
= simple_form_for :geographies,
  url: admin_custom_geographies_path,
  html: {multipart: true, method: :post, class:'form-horizontal'},
  authenticity_token: true do |f|
  = f.input :shapefile, required:true, label: "Upload Shapefile", :as => :file
  = f.input :kmlfile, required:true, label: "Upload KML file", :as => :file, disabled: true
  = f.input :name, required: true, label: "Geography Name"
  = f.input :description, required: false, label: "Description"
  = f.input :agency,
    collection: @agencies || [],
    label: 'Transportation Agency',
    selected: @agencies&.length == 1 ? @agencies&.first.id : nil,
    disabled: true,
    include_blank: "Select a Transportation Agency"
  = f.input :agency,
    as: :hidden,
    collection: @agencies,
    label: 'Transportation Agency',
    selected: @agencies&.length == 1 ? @agencies&.first.id : nil,
    disabled: true,
    include_blank: "Select a Transportation Agency",
    input_html: { id: 'hidden_agency',
      value:@agencies&.length == 1 ? @agencies&.first.id : nil}
  =link_to 'Cancel', admin_custom_geographies_path, class: 'btn btn-danger'
  =f.submit 'Upload', class: 'btn btn-primary'