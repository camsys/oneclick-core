  =render partial: 'paratransit_details_2', layout: '/layouts/panel'
  =render partial: 'paratransit_details_3', layout: '/layouts/panel'
-when 'Taxi'
  = simple_form_for @service, url: admin_service_path, html: {class: 'form-horizontal', multipart: true, method: :put }, authenticity_token: true do |f|
    =render partial: 'taxi_details_1', layout: '/layouts/panel', locals: {f: f}
