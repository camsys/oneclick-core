= simple_form_for funding_source,
  url: form_url,
  authenticity_token: true,
  data: {type: 'html'},
  html: {class: 'form-horizontal form-container', id: 'form_id_from_path', multipart: true, method: mode == "new" ? :post : :put} do |form|

  .form-group.row
    =form.label :agency_id, 'Agency: ', class: 'col-sm-1 control-label'
    .col-sm-5
      =form.select :agency_id, [[funding_source.agency.name, funding_source.agency_id]], {}, { class: 'form-control', disabled: true }
    =form.hidden_field :agency_id

    =form.label :name, 'Name: ', class: 'col-sm-1 control-label'
    .col-sm-5
      =form.text_field :name, { placeholder: 'Enter name of funding source', class: 'form-control', disabled: mode == 'view' }

  .form-group.row
    =form.label :description, 'Description: ', class: 'col-sm-2 control-label'
    .col-sm-10
      =form.text_field :description, { placeholder: 'Enter description of funding source', class: 'form-control', disabled: mode == 'view' }

  .form-group.text-center
    - if mode == 'view'
      =link_to 'Done', admin_funding_sources_path, class: 'btn btn-danger'
    -else
      =link_to 'Cancel', admin_funding_sources_path, class: 'btn btn-danger'
      =form.submit class: 'btn btn-primary'