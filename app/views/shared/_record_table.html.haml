-# Takes a record collection and an array of symbols for column names/methods
%table.table{class: local_assigns[:class] || ""}
  %thead.thead-default
    %tr
      -columns.each do |col|
        %th
          =col.to_s.titleize
  %tbody
    -records.each do |record|
      %tr{style: "cursor: pointer", data: {url: "http://www.google.com"}}
        -columns.each do |col|
          %td
            =record.send(col)

:javascript
  $(document).ready(function() {

    // Link to appropriate feedback detail on row click
    $('table tbody tr').click(function() {
      window.location = $(this).data("url");
    });
  });
